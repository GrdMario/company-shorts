{
  "PropertyA": "From appsettings.json",
  "Azure": {
    "KeyVault": {
      "Name": "YOUR_KEY_VAULT_NAME"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "SwaggerInfo": {
    "Title": "Example Api"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "System.Net.Http.HttpClient": "Warning"
      }
    },
    "WriteTo:File": {
      "Name": "Logger",
      "Args": {
        "configureLogger": {
          "WriteTo": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs\\log-.txt",
                "outputTemplate": "{Timestamp:o} [Thread]:{ThreadId} [{Level:u3}] [{Properties}] ({SourceContext}) {Message:lj}{_Exception}(NewLine)",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 14
              }
            }
          ]
        }
      }
    },
    "Using": [ "Company.Shorts.Blocks.Common.Serilog.Configuration" ],
    "Enrich": [
      "FromLogContext",
      "WithEscapedExceptionMessage",
      "WithMachineName",
      "WithThreadId",
      "WithThreadName"
    ],
    "Properties": {
      "ApplicationName": "Company.Shorts"
    }
  }
}
